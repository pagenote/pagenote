{
    "compilerOptions": {
        "target": "es5",
        "module": "ES2015",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",

        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015.promise",
            "es2016"
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}
