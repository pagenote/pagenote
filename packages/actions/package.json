{
  "name": "@pagenote/actions",
  "version": "0.1.1-next.2",
  "license": "MIT",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./utils": "./dist/utils/index.js",
    "./method":{
      "import":  "./dist/actions/index.js",
      "types":  "./dist/actions/index.d.ts"
    },
    "./runner": "./dist/runner/index.js"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "tsc": "tsc",
    "start": "tsc --watch",
    "dev": "tsc --watch",
    "build": "tsc",
    "test": "jest test",
    "prepare": "tsc",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "rowthan",
  "size-limit": [
    {
      "path": "dist/actions.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/actions.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.2",
    "@types/jest": "^29.5.11",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "size-limit": "^11.0.2",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "expr-eval": "^2.0.2",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "marked": "^11.2.0"
  }
}
